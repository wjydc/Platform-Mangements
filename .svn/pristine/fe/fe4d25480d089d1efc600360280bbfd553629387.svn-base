/* 模态框样式重置 */
.modal{
  top:100px;
}
.modal-header{
  height:50px;
  padding: 0;
  line-height: 50px;
 color:#fff;
}
.modal-header .close{
  margin:0;
  float: none;
   position: absolute;
  top:0;
  right:0;
   border-top-right-radius:6px;
   text-shadow: none;
    color:#fff;
    opacity:1;
}
.modal-header span{
  display: block;
  width:50px;
  height:50px;
  line-height: 50px;
  background-color:#33b0ff;
   border-top-right-radius:6px;
 
}
.modal-header .modal-title{
   display: block;
   width:100%;
   height:50px;
  background-color:#22a3f4;
  padding:0 0 0 20px;
  line-height: 50px;
  border-top-left-radius:6px;
  color:#fff;
  font-size:18px;
}

/* 模态框底部按钮 */
.modal-footer{
  text-align: center;
}
.modal-footer .cancle{
  width:140px;
  height:40px;
  color:#22a3f4;
  border:1px solid #22a3f4; 
}

.modal-footer .save{
  width:140px;
  height:40px;
  color:#fff; 
  background-color: #22a3f4; 
  border:1px solid #22a3f4; 
}

