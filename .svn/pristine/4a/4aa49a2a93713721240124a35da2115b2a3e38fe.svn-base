<script>
   $('#Login').click(function(){
    loginuser();
   })

   $('.login').each(function(index,item){
       var that=$(this);
       that.focus(function(){
        that.siblings('ul').show();
        userName()
        passWord()
     })
   })
//   用户名
  function userName(){
    $('.userName').siblings('ul').find('li').each(function(){
            $(this).click(function(){
                var text=$(this).text()
                $(this).parent().siblings('input').val(text);
                $(this).parent().hide()
            })
        })
  }
// 密码
  function passWord(){
    $('.passWord').siblings('ul').find('li').each(function(){
            $(this).click(function(){
                var text=$(this).attr('data-password');
                $(this).parent().siblings('input').val(text);
                $(this).parent().hide()
            })
        })
  }

    function loginuser(){
        var loginusername = $('.userName').val();
        var loginpassword = $('.passWord').val();
        var  refreshinput = $('.refreshinput').val();
        if(loginusername == '' ){
            console.log('123')
            tips(false,'请输入用户名')
            return;
        }
        if(loginpassword == ''){
            tips(false,'请输入密码')
            return;
        }
        if(refreshinput == ''){
            tips(false,'请输入验证码')
            return;
        }
       
    }

   // 提示信息
   function tips(isfail,message){
    var faElement=$('body');
       if(isfail){
          var ele='';
       }else{
        var ele='<div class="tips"><i class="glyphicon glyphicon-exclamation-sign"></i>'+message+'</div>'; 
       }
       function hide(){
        faElement.find('.tips').remove()
      }

    function show(){
        faElement.append(ele)
    }

    function add(callback){
        show();
        callback();
    }
    add(function(){
        timer=setTimeout(hide,1500);
    })
}


