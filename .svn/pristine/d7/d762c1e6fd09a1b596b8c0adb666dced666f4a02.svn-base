// 公众号配置模态框
.Public{
  .modal-header{
    height:50px;
    padding: 0;
    line-height: 50px;
   color:#fff;
    .close{
      margin:0;
      float: none;
       position: absolute;
      top:0;
      right:0;
       border-top-right-radius:6px;
       text-shadow: none;
        color:#fff;
        opacity:1;
      span{
        display: block;
        width:50px;
        height:50px;
        line-height: 50px;
        background-color:#33b0ff;
         border-top-right-radius:6px;
      }
    }
    .modal-title{
     display: block;
     width:550px;
     height:50px;
    background-color:#22a3f4;
    padding:0 0 0 20px;
    line-height: 50px;
    border-top-left-radius:6px;
    color:#fff;
   
    }
  }
  .modal-body{
    padding: 30px 35px;
    overflow: hidden;
  
   .changeCostInput{
       width:50%;
       margin: 0 auto;
       line-height: 30px;
    label{
        color:#f5a408;
        font-size: 18px;
        vertical-align: middle;
        margin-right: 10px;
    }
    input{
        width:80%;
        height: 30px;
        border:1px solid #e8e9eb;
        border-radius: 4px;
        padding-left: 5px;
    }


   }
   
   
   
  }

  .modal-footer{
    text-align: center;
    border:none;
    .btn{
      width:140px;
      height:35px;
    }
    .btn-default{
      color:#33b0ff ;
    }
    
    .btn-primary{
      background-color: #33b0ff ;
      border-color:#33b0ff;
      color:#fff
    }
    
    
  }
}



