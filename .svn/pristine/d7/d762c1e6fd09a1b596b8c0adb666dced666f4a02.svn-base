.table{
    tbody{
        tr{
             &:hover{
                 background-color: #f2f6fa;
                }
            td{
                vertical-align: middle;
            }
        }
        tr:last-child{
            border-bottom: 1px solid #ddd ;
        }
        td{
            .channelRecharge{
                display: block;
                width:100px;
                height:30px;
                color: #22a3f4;
                border:1px solid #22a3f4;
                border-radius: 4px;
               text-align: center;
               line-height: 30px;
               margin:0 auto;
            }
        }
    }
}






 .searching{
        overflow: hidden;
        margin: 10px 0;
        padding-left: 20px;
        .channelmenu{
            float: left;
            width:140px;
            height:32px;
            border:1px solid #ddd ;
            border-radius: 4px;
        }
        input{
            float: left;
            width:250px;
            height:32px;
            border:1px solid #ddd ;
            border-radius: 4px;
            box-shadow: none;
            margin:0;
            padding-left: 5px;
        }
        .searchbtn{
            width:40px;
            height:32px;
            float: left;
            line-height: 32px;
            border-radius: 4px;
            background-color: #22a3f4;
            text-align: center;
             margin:0 10px;
             cursor: pointer;
            i{
                color:#fff;
                font-size: 14px;
            }
        }
        // 导出
        .checkout{
            float:right;
            width:100px;
            height:30px;
            line-height: 30px;
            text-align: center;
            color:#fff;
            border-radius: 4px;
            background-color: #22a3f4;
            cursor: pointer;
            margin-right: 30px;
            i{
                margin-right: 5px;
            }
        }
    }



.messagetips{
