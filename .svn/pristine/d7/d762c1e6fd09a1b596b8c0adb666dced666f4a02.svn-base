
// 公用

.BILL{
    width:100%;
    .title{
    color: #919699;
    font-size:18px;
    padding: 15px 0 25px 15px;
    margin: 0;
    }
    // 收益列表
    .earnList{
        width:100%;
        ul{
            overflow: hidden;
           margin:0 0 10px 0;
            display: -webkit-box; //老版本语法：safari,IOS,Android,Old Webkit browsers
            display:-moz-box;     //老版本语法：Firefox(buggy)
            display:-ms-flexbox;  //混合版本语法：IE10
            display:flex;
            justify-content: space-between;
            flex-wrap: wrap;
            li{
                width:218px;
                min-height:80px;
                border-radius:4px;
                padding: 20px 0;
                border:1px solid #e8e9eb;
                // float: left;
                // margin-right:20px;
                margin-bottom: 10px;
                text-align: center;
                p{
                    line-height:25px;
                }
                .listTilte{
                    font-size: 16px;
                }
                .listMoney{
                    color: #ed8e0e ;
                    font-size: 22px;
                    .moneyIcon{
                        font-size: 16px;
                    }
                }
                .listAccount{
                    font-size: 14px;
                    color:#919699;
                }
            }
        }
    }
    .calendar{
        width:100%;
        overflow: hidden;
        .calendarS{
            float: left;
            width:180px;
            height:30px;
            line-height: 30px;
            border:1px solid #e8e9eb;
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 10px;
            input{
                border:none;
                width:175px;
                height:28px;
                float: left;
                margin:0;
                box-shadow: none;
                outline:none;
                padding-left: 5px;
            }
            i{
                float: left;
                margin-top: 5px;
                color:#e8e9eb;
            }
        }
        .line{
                float: left;
                margin:0 5px;
        }
        .search{
            float: left;
            border-radius: 4px;
            margin:0 10px;
           width:35px;
           height:30px;
           text-align: center;
           line-height: 30px;
           background-color:#22a3f4;
           cursor: pointer;
           i{
               color:#fff ;
           }
        }
        .time{
            float: left;
            min-width: 100px;
            height: 30px;
            line-height: 30px;
            font-size: 14px;
            
        }
        // 导出
        .checkout{
            float:right;
            width:100px;
            height:30px;
            line-height: 30px;
            text-align: center;
            color:#fff;
            border-radius: 4px;
            background-color: #22a3f4;
            cursor: pointer;
            i{
                margin-right: 5px;
            }
        }
       
        .searchinfo{
            float: left;
            width:160px;
            height:30px;
            border-radius: 4px;
            border:1px solid #e8e9eb;
            margin-left:10px;
            margin-bottom: 10px;
            font-size: 14px;
            // color: #e8e9eb;
        
            input{
                border:none;
                width:100%;
                height:28px;
                padding:0 5px;
                border-radius: 4px;
                font-size: 14px;
                box-shadow: none;
            }
        }
        .selects{
            width:120px;
            height:30px;
            select{
                width:100%;
                height:28px;
                border:none;
                 padding:0 5px;
                border-radius: 4px;
                 font-size: 14px;
            }
        }
    }
}
