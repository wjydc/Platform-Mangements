.noval{
    width:100%;
    .container{
        padding: 0;
        position: relative;
    }
    #myTab{
        li:first-child{
            a{
                border-left:1px solid transparent;
            }
        }
        a{
            font-size: 18px;
            padding: 15px 30px;
        }

       .active{
           a{
           color:#22a3f4 ;
           border-top:2px solid #22a3f4;
           }
       }
    }
    .col-md-8{
        padding:0 0 0 15px;
    }
    .col-md-4{
         
    }
    .search{
        width:40%;
         padding: 20px 25px 0 30px;
         overflow: hidden;
      
        i{
            color:#fff ;
        }
        .btn{
            border-radius:none;
            background-color:#bfe7ff;
            
        }
    }


    .tab-content{
        table{
            thead{
                border:none;
                tr{
                     border:none;
                }
            }
            tbody tr{
                &:hover{
                    background-color: #f2f6fa;
                }
            }
            tbody tr:last-child{
                border-bottom: 1px solid #ddd;
            }
            th{
                vertical-align: middle;
                padding: 20px 0;
            }
           td{
                vertical-align: middle;
                padding: 10px 0;
            }
        }
        
       .pad{
           padding-left: 20px;
            position: relative;
    
           img{
               width:74px;
               height: 92px;
           }
            span{
                position: absolute;
                top:0;
                left:0;
                opacity: 0;
                z-index: -10000;
                display: inline-block;
                width:80%;
                overflow: hidden;
            }
       }
        .textcenter{
          text-align:center;
        }
        .tdTitle{
           font-size:16px;
           color:#2b3033;
        }
        p{
            font-size: 14px;
            color: @textcolor;
            line-height: 30px;
        }
    }
   
}


// 小说章节
.novalList{
    @titlecolor:#22a3f4;
    width:100%;
    overflow: hidden;
    padding: 20px 0 20px 20px;
    .descript{
        width:205px; 
        min-height: 200px;
        float: left;
        position: relative;
        img{
            width:205px;
            height:255px;
        }
        .title{
            margin:10px 0;
            font-size: 18px;
            color:#2b3033;
        }
        .brief{
            font-size: 12px;
            color: @textcolor;
            line-height: 25px;
           
        }
        .gray{
            color:#919699;
            margin: 10px 0;
            font-size: 14px;
        }
    }
    .charpterList{
        overflow: hidden;
        padding: 0 0 0 10px;
         ul{
      
       li{
           min-height: 50px;
           border-bottom:1px solid #f0f0f0;
           overflow: hidden;
           cursor: pointer;
           &:hover{
               background-color: #f2f6fa ;
               .title{
                   color: @titlecolor
               }
           }
           p{
             float: left;
             width:83%;
              span{
                    display: inline-block;
                    float:left;
                }
             .num{
                 margin:0 10px;
                 min-width: 20px;
                 line-height: 50px;
                 text-align: center;
             }
            .orange{
              min-width: 30px;
              text-align: center;
                border-radius:2px;
                border:1px solid #f6a407;
                margin-right: 10px;
                margin-top: 16px;
                font-size: 10px;
            }
            .red{
              min-width: 30px;
              text-align: center;
                border-radius:2px;
                border:1px solid #fa570f;
                margin-right: 10px;
                margin-top: 16px;
                font-size: 10px;
            }
             .title{
                
                 max-width: 70%;
                 overflow: hidden;
                 text-overflow: ellipsis;
                 white-space: nowrap;
                  line-height: 50px;
                  font-size: 16px;
             }
           }
            a{
               width:115px;
               height:30px;
               line-height: 30px;
                float: left;
                color: @titlecolor;
                font-size: 14px;
                margin: 10px 0;
                border:1px solid @titlecolor ;
                border-radius: 4px;
                text-align: center;
            }
         }
      }
    }
    .tcdPageCode{
    margin-top: 20px;
}
  
}

