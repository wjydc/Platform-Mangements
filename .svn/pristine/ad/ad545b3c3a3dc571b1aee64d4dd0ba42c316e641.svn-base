$('#AddBtn').click(function(){
    var num=$('.SubmenuLi').length+1;
    num++;
    // console.log(num)
    var  str = "<li class='SubmenuLi'><span>一级菜单</span><ul class='SubmenuUl'><li class='SubmenuUlLi'>+</ul>";
    if(num > 4){
        return;
    }else if(num == 4){
        num = 3;
        $(".firstLi").before(str);
        $(".firstLi").hide();
    }else{
        $(".firstLi").before(str);
    }
    $(".SubmenuLi,.firstLi").css({"width":100 / num +"%"});

    

});

